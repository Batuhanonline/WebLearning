<%-include('../inc/site-head')%> 

<%-include('../inc/site-navbar-academy')%> 

<section>
    <div class="d-flex justify-content-center" style="margin-top: 100px;">
        <div class="card" style="width: 35%;">
            <div class="card-header">
                <h1>Öğretmen Kayıt</h1>
            </div>
            <div class="card-body">
                <form action="" method="post">
                    <div class="mb-3">
                        <label for="teacherName" class="form-label">Öğretmen İsim</label>
                        <input class="form-control" id="teacherName" type="text" name="teacherName" placeholder="İsim" required>
                    </div>
                    <div class="mb-3">
                        <label for="teacherLoginID" class="form-label">Öğretmen ID</label>
                        <input class="form-control" id="teacherLoginID" type="text" name="teacherLoginID" placeholder="ID" required>
                    </div>
                    <div class="mb-3">
                        <label for="teacherPassword" class="form-label">Şifre</label>
                        <input class="form-control" type="password" id="teacherPassword" name="teacherPassword" placeholder="Şİfre" required>
                    </div>
                    <div class="mb-3 form-check">
                        <input class="form-check-input" type="checkbox" id="academyID" name="academyID" value="<%= academy._id %>" required>
                        <label for="academyID" class="form-label">Kayıt İşlemini Onaylayınız</label>
                    </div>
                    <input class="btn btn-primary" type="submit" value="Kayıt">
                </form>
            </div>
        </div>
    </div>
</section>

<%-include('../inc/site-footer.ejs')%> 