<%-include('../inc/site-head')%> 
<%-include('../inc/site-navbar-student')%> 


<% gameLesson.forEach(lesson => { %>
    <div class="d-flex justify-content-center text-center" style="margin-top: 40px;">
        <div class="card text-white  bg-success mb-3 " style="width: 50rem;">
            <div class="card-header"><b><%= lesson.gameTitle %></b></div>
            <div class="card-body">
                <p class="card-text"><%= lesson.gameDescription %> </p>
            </div>
            <% lesson.scores.forEach((score, index) => { %>
                <div class="card-footer">
                    <p class="card-text"><%= index + 1 %>. Denemeniz: <br> 
                        Kontrol sayısı: <%= score.check %> <br>
                        Bitirme süresi: <%= score.minute %> dakika <%= score.second %> saniye    </p>
                </div>
            <% }) %>
        </div>
    </div>
<% }) %>

<%-include('../inc/site-footer')%> 